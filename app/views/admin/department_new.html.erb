<div class="admin_index_header">
  <h1>New Department</h1>
</div>
<div class="half">
  <div>
    <%= simple_form_for(@department, url: admin_departments_path) do |f| %>
      <% if @department.errors.any? %>
        <div class="errors-container">
          <ul>
            <% @department.errors.full_messages.each do |message| %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <%= f.input :name, label: "Name", placeholder: "department name" %>
      <%= f.submit 'Create department', class: 'btn btn-primary',  id: 'booking-btn' %>
    <% end %>
  </div>
  <div class="pathfix-container">
    <h5>Or upload via CSV</h5>
    <button class="btn btn-success">Upload CSV</button>
  </div>
</div>
